<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.smart.message.dao.MessageApplicationDao">

	<select id="get" parameterType="java.lang.Integer" resultType="MessageApplication">
     	SELECT * FROM SYS_MESSAGE_APPLICATION WHERE id = #{id}
    </select>

    <insert id="save" parameterType="MessageApplication" statementType="PREPARED" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO 
			SYS_MESSAGE_APPLICATION(name,description,sort,type,count,successCount,errorCount) 
		VALUES
			(#{name},#{description},#{sort},#{type},#{count},#{successCount},#{errorCount})
	</insert>
	
    <update id="update" parameterType="MessageApplication" statementType="PREPARED">
		UPDATE 
			SYS_MESSAGE_APPLICATION a 
		SET 
			a.name = #{name},a.description = #{description},a.sort = #{sort},a.type = #{type},a.count = #{count},
			a.successCount = #{successCount},a.errorCount = #{errorCount}
		WHERE
			a.id = #{id}
	</update>
	
</mapper>